{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web": "pnpm --filter web",
    "blog": "pnpm --filter blog",
    "ui": "pnpm --filter ui",
    "lib": "pnpm --filter lib",
    "txnl": "pnpm --filter transactional"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.5.0",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.7.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "core-js-pure",
      "esbuild",
      "sharp"
    ]
  }
}
