<button
  id="scroll-to-top"
  class="fixed bottom-8 right-8 size-11 flex justify-center items-center rounded-lg bg-gray-800 dark:bg-gray-200 text-white dark:text-gray-800 opacity-0 pointer-events-none transition-all duration-300 hover:bg-gray-700 dark:hover:bg-gray-300 z-50"
  aria-label="Scroll to top"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-6 w-6"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M5 15l7-7 7 7"></path>
  </svg>
</button>

<script>
  const scrollButton = document.getElementById("scroll-to-top");

  function toggleScrollButton() {
    if (window.scrollY > 200) {
      scrollButton?.classList.remove("opacity-0", "pointer-events-none");
      scrollButton?.classList.add("opacity-100", "pointer-events-auto");
    } else {
      scrollButton?.classList.remove("opacity-100", "pointer-events-auto");
      scrollButton?.classList.add("opacity-0", "pointer-events-none");
    }
  }

  // Initial check
  toggleScrollButton();

  scrollButton?.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });

  window.addEventListener("scroll", toggleScrollButton);
</script>
