---
import { cn } from "@/lib/utils";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"span">;

const { class: className, ...props } = Astro.props;
---

<span
  class={cn(
    "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs text-foreground font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2",
    className,
  )}
  {...props}
>
  <slot />
</span>
